{% extends 'project/list.html.twig' %}

{% block category_details %}

<section id="category-detail">
    <div class="category-detail-column">
        <div class="category-title">
            <span class="slash slash-right"></span>
            <h2>
                {{ cat.name }},
                <small>{{ projects.count }} projets</small>
            </h2>
        </div>
        <h4>Compétences mobilisées</h4>
        <ul id="skills-ul">
            {% for skill in cat.skillListItems %}
                <li>{{ skill.content }}</li>
            {% endfor %}
        </ul>
    </div>
    <div id="right-cat-col" class="category-detail-column">
        <div id="right-category-title" class="category-title">
            <h2>Dernier Projet
                <img src="/img/arrow-down.png" alt="Arrow down pictogram">
            </h2>
            <span class="slash slash-left"></span>
        </div>
        <ul>
            <li>
                <img src="/img/picto/note.png" alt="Bloc note pictogram">
                <a href="{{ projects.0.showUrl }}">
                    {{ projects.0.name }}
                </a>
            </li>
            <!-- High Concept -->
            <li>
                <img src="/img/picto/info.png" alt="Interrogation point pictogram">
                <span class="text-align-right">
                    {{ projects.0.highConceptType }} -
                    {{ projects.0.highConceptGender }} -
                    {{ projects.0.highConceptTarget }}
                </span>
            </li>
            <li>
                <img src="/img/picto/calendar.png" alt="Calendar pictogram">
                Terminé le {{ projects.0.endDate|date }}
            </li>
            <li>
                <img src="/img/picto/user.png" alt="User pictogram">
                {{ projects.0.contributorsNbreDisplay }}
            </li>
        </ul>
    </div>
</section>

    <hr>

{% endblock %}

{% block catlistscripts %}

    <!-- Toggle cat details -->
    <script type="application/javascript" src="/js/toggle-details.js"></script>
    <script type="application/javascript" src="/js/list-projects-toggle-cat.js"></script>

{% endblock %}