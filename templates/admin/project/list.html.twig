{% extends 'base.html.twig' %}

{% block body %}

    <section id="edit-projects">
        <h1>Gérer les projets</h1>

        <table>
            <tr>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>{{ project.category.name }}</td>
                    <td><a href="#">
                            <img src="/img/picto/edit.png" alt="Pen pictogram">
                    </a></td>
                    <td><a href="#">
                            <img src="/img/picto/delete.png" alt="Trash pictogram">
                    </a></td>
                </tr>
            {% endfor %}
        </table>
    </section>

{% endblock %}